{
  "name": "jalaali-ts",
  "version": "1.0.0",
  "description": "A strict, clean TypeScript implementation of jalaali-js, offering reliable conversion between Jalaali (Persian) and Gregorian calendars with modern module support. Based on the original MIT-licensed jalaali-js algorithm.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "format:check": "prettier --check src/**/*.ts test/**/*.ts",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/H-Luhrasbe/jalaali-ts.git"
  },
  "keywords": [
    "jalaali",
    "jalali",
    "jalaali-js",
    "jalali-js",
    "jalaali-ts",
    "jalali-ts",
    "jalaali-calendar",
    "jalali-calendar",
    "khorshidi-calendar",
    "persian-calendar",
    "shamsi-calendar",
    "sun-calendar",
    "jalaali-date",
    "jalali-date",
    "khorshidi-date",
    "persian-date",
    "shamsi-date",
    "sun-date",
    "date-conversion",
    "date-converter",
    "calendar-conversion",
    "persian",
    "shamsi",
    "khorshidi",
    "gregorian",
    "gregorian-date",
    "gregorian-calendar",
    "iran",
    "iran-calendar",
    "iran-date",
    "date-utils",
    "calendar-utils",
    "date-library",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/H-Luhrasbe/jalaali-ts/issues"
  },
  "homepage": "https://github.com/H-Luhrasbe/jalaali-ts#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Haddi (Hirrad) Luhrasbe <haddi.luhrasbe@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/node": "24.10.1",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.4",
    "vitest": "4.0.9"
  }
}
